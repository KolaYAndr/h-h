<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/quantityButtonDecrease"
        style="@style/Theme.HnHApp.QuantityButton.Text.Button"
        android:layout_width="@dimen/quantity_button_width"
        android:layout_height="@dimen/quantity_shared_height"
        android:background="@drawable/quantity_button_decrease_selector_shape"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/decrement_sign" />

    <TextView
        android:id="@+id/quantityButtonText"
        style="@style/Theme.HnHApp.QuantityButton.Text.TextView"
        android:layout_width="@dimen/quantity_text_width"
        android:layout_height="@dimen/quantity_shared_height"
        android:background="@drawable/quantity_button_text_background"
        android:gravity="center"
        tools:text="1" />

    <TextView
        android:id="@+id/quantityButtonIncrease"
        style="@style/Theme.HnHApp.QuantityButton.Text.Button"
        android:layout_width="@dimen/quantity_button_width"
        android:layout_height="@dimen/quantity_shared_height"
        android:background="@drawable/quantity_button_increase_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/increment_sign" />

</LinearLayout>