    <color name="white">#FFFFFFFF</color>
    <color name="white_50pc">#80FFFFFF</color>
    <dimen name="catalog_error_detailed_text_size">12sp</dimen>
    <dimen name="catalog_error_image_size">114dp</dimen>
    <dimen name="catalog_error_unexpected_text_line">18dp</dimen>
    <dimen name="catalog_error_unexpected_text_size">14sp</dimen>
    <dimen name="catalog_toolbar_text_line">24dp</dimen>
    <dimen name="catalog_toolbar_text_size">20sp</dimen>
    <dimen name="corner_round">8dp</dimen>
    <dimen name="item_description_text_line">20sp</dimen>
    <dimen name="item_description_text_size">12sp</dimen>
    <dimen name="item_image_view_size">112dp</dimen>
    <dimen name="item_name_text_size">14sp</dimen>
    <dimen name="item_price_margin_bottom">6dp</dimen>
    <dimen name="item_price_text_line">18dp</dimen>
    <dimen name="item_price_text_size">14sp</dimen>
    <dimen name="item_purchase_padding_horizontal">8dp</dimen>
    <dimen name="item_purchase_padding_vertical">6dp</dimen>
    <dimen name="item_purchase_text_line">16dp</dimen>
    <dimen name="item_purchase_text_size">12sp</dimen>
    <dimen name="normal_100">16dp</dimen>
    <dimen name="normal_150">24dp</dimen>
    <dimen name="normal_200">32dp</dimen>
    <dimen name="normal_300">48dp</dimen>
    <dimen name="normal_50">8dp</dimen>
    <dimen name="normal_675">108dp</dimen>
    <dimen name="progress_bar_elevation">2dp</dimen>
    <dimen name="text_field_error_size">16dp</dimen>
    <dimen name="text_field_hint_size">16dp</dimen>
    <dimen name="text_field_input_size">16sp</dimen>
    <dimen name="text_h1_line">34sp</dimen>
    <dimen name="text_h1_size">36dp</dimen>
    <dimen name="text_loading_button_line">16dp</dimen>
    <dimen name="text_loading_button_size">16sp</dimen>
    <dimen name="text_refresh_button_line">16dp</dimen>
    <dimen name="text_refresh_button_size">12sp</dimen>
    <integer name="default_request_product_size">20</integer>
    <integer name="item_description_max_lines">1</integer>
    <string name="app_name" translatable="false">Lesson 7</string>
    <string name="catalog">Catalog</string>
    <string name="hello_blank_fragment" translatable="false">Hello blank fragment</string>
    <string name="purchase">Purchase</string>
    <string name="purchase_action">@string/purchase</string>
    <string name="refresh">Refresh</string>
    <string name="sign_in">Sign in</string>
    <string name="sign_in_action">@string/sign_in</string>
    <string name="sign_in_login_error">Field is filled in incorrectly</string>
    <string name="sign_in_login_hint">Login</string>
    <string name="sign_in_password_error">Field is filled in incorrectly</string>
    <string name="sign_in_password_hint">Password</string>
    <string name="sign_in_title">@string/sign_in</string>
    <string name="unexpected_error">Unexpected error occurred</string>
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/black_20pc</item>
    </style>
    <style name="TextAppearance" parent="android:TextAppearance"/>
    <style name="TextAppearance.Button" parent="TextAppearance">
        <item name="textAllCaps">true</item>
    </style>
    <style name="TextAppearance.H1" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_h1_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_h1_line</item>
    </style>
    <style name="TextAppearance.TextField" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_field_hint_size</item>
    </style>
    <style name="TextAppearance.TextField.Error" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_field_error_size</item>
    </style>
    <style name="TextAppearance.TextField.Hint" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_field_hint_size</item>
    </style>
    <style name="Theme.HnHApp" parent="Base.Theme.MyApplication">
        <item name="android:statusBarColor">@color/black_20pc</item>
        <item name="colorPrimary">@color/smalt</item>
        <item name="textInputStyle">@style/Theme.HnHApp.TextInputLayout</item>
    </style>
    <style name="Theme.HnHApp.Catalog.ErrorScreen.Detailed" parent="TextAppearance">
        <item name="android:textSize">@dimen/catalog_error_detailed_text_size</item>
        <item name="android:textColor">@color/silver_chalice</item>
    </style>
    <style name="Theme.HnHApp.Catalog.ErrorScreen.Unexpected" parent="TextAppearance">
        <item name="android:textSize">@dimen/catalog_error_unexpected_text_size</item>
        <item name="android:textColor">@color/silver_chalice</item>
        <item name="android:lineSpacingExtra">@dimen/catalog_error_unexpected_text_line</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.HnHApp.Catalog.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/smalt</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>
    <style name="Theme.HnHApp.Catalog.ToolbarText" parent="TextAppearance">
        <item name="android:textSize">@dimen/catalog_toolbar_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/catalog_toolbar_text_line</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.HnHApp.CatalogProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/smalt</item>
    </style>
    <style name="Theme.HnHApp.ItemDescription" parent="TextAppearance">
        <item name="android:textSize">@dimen/item_description_text_size</item>
        <item name="android:textColor">@color/silver_chalice</item>
        <item name="android:lineSpacingExtra">@dimen/item_description_text_line</item>
        <item name="maxLines">@integer/item_description_max_lines</item>
    </style>
    <style name="Theme.HnHApp.ItemName" parent="TextAppearance">
        <item name="android:textSize">@dimen/item_name_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.HnHApp.ItemPrice" parent="TextAppearance">
        <item name="android:textSize">@dimen/item_price_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">@dimen/item_price_text_line</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.HnHApp.LoadableButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/Theme.HnHApp.ShapeAppearanceButton</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:textSize">@dimen/text_loading_button_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_loading_button_line</item>
    </style>
    <style name="Theme.HnHApp.RefreshButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/Theme.HnHApp.ShapeAppearanceButton</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:textSize">@dimen/text_refresh_button_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_refresh_button_line</item>
    </style>
    <style name="Theme.HnHApp.ShapeAppearanceButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_round</item>
    </style>
    <style name="Theme.HnHApp.ShapeAppearanceTextInputLayout" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/corner_round</item>
        <item name="cornerSizeTopRight">@dimen/corner_round</item>
    </style>
    <style name="Theme.HnHApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/seashell</item>
        <item name="boxStrokeColor">@color/text_field_box_stroke_color</item>
        <item name="shapeAppearance">@style/Theme.HnHApp.ShapeAppearanceTextInputLayout</item>
        <item name="android:textAppearance">@style/TextAppearance.TextField</item>
        <item name="hintTextAppearance">@style/TextAppearance.TextField.Hint</item>
        <item name="errorTextAppearance">@style/TextAppearance.TextField.Error</item>
        <item name="android:textColorHint">@color/silver_chalice</item>
        <item name="hintTextColor">@color/silver_chalice</item>
        <item name="errorTextColor">@color/text_field_error</item>
    </style>
    <style name="Theme.HnhApp.ItemPurchase" parent="TextAppearance">
        <item name="android:textSize">@dimen/item_purchase_text_size</item>
        <item name="textAllCaps">true</item>
        <item name="android:lineSpacingExtra">@dimen/item_price_text_line</item>
        <item name="android:textColor">@color/smalt</item>
        <item name="drawableTint">@color/smalt</item>
        <item name="background">?attr/selectableItemBackground</item>
    </style>
</resources>